    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorPrimary">@color/adsumGreen</item>
        <item name="android:colorPrimaryDark">@color/adsumGreen</item>
        <item name="android:statusBarColor">@color/adsumGreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

